<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.indepay.consumerapp.LoginProcess.VerifyMobileNo"
    tools:showIn="@layout/activity_verify_mobile_no">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/indepay_logo_horizntl"/>
    </RelativeLayout>

    <Button
        android:id = "@+id/sendSMSBtnId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/signInBtnId"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="35dp"
        android:background="@drawable/buttonshape_noround"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:text = "Register" />


    <Button
        android:id = "@+id/signInBtnId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape_noround"
        android:textColor="#ffffff"
        android:text = "SIGN IN"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>