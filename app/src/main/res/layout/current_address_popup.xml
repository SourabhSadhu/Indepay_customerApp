<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4">


    <RelativeLayout
        android:id = "@+id/rLTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id = "@+id/titleId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="You can edit your address if it is not correct"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:textColor="#000000"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/rL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rLTop"
        android:layout_marginTop="20dp">
        <EditText
            android:id = "@+id/editAddressId"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/edit_text_shape"
            android:hint = "Address"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#000000"
            android:gravity="center"/>
    </RelativeLayout>



    <RelativeLayout
        android:id = "@+id/rL3"
        android:layout_below="@+id/rL1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">
        <Button
            android:id = "@+id/okBtnAddressPopUpId"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshape_noround"
            android:text = "OK"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <Button
            android:id = "@+id/cancelBtnAddressPopUpId"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshape_noround"
            android:text = "CANCEL"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

</RelativeLayout>