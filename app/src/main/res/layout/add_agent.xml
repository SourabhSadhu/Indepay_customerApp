<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:focusableInTouchMode="true"
    tools:context="com.indepay.consumerapp.MyAgents.AddAgent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:id = "@+id/scrollViewId"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp">
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id = "@+id/rL2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id = "@+id/nameoOfAgentId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint = "Name of Agent"
                    android:gravity="center"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL3"
                android:layout_below="@+id/rL2"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">


                <EditText
                    android:id = "@+id/agentidId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint = "Enter agent ID"
                    android:inputType="number"
                    android:background="@drawable/edit_text_shape"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL4"
                android:layout_below="@+id/rL3"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="45dp">

                <EditText
                    android:id = "@+id/agentMobileNoNoId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="10"
                    android:background="@drawable/edit_text_shape"
                    android:hint = "Enter agents mobile number"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:layout_marginStart="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id = "@+id/rL6"
                android:layout_below="@+id/rL4"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <EditText
                    android:id = "@+id/nickNameId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="true"
                    android:layout_marginEnd="20dp"
                    android:inputType="text"
                    android:fitsSystemWindows="true"
                    android:windowSoftInputMode="stateVisible|adjustResize"
                    android:background="@drawable/edit_text_shape"
                    android:hint = "Enter nickname,if any"
                    android:gravity="center"
                    android:layout_marginStart="20dp" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
    <Button
        android:id = "@+id/sendOTPtoAgentBtnId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape_noround"
        android:textColor="#ffffff"
        android:text = "Send OTP to AGENT"/>
</RelativeLayout>
