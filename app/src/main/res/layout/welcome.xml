            <View
                android:id="@+id/viewId"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/rL1"
                android:layout_marginTop="12dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/rL3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/viewId"
                android:layout_marginTop="45dp">


                <EditText
                    android:id="@+id/nameCardHolderId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edit_text_shape"
                    android:gravity="center"
                    android:hint="Name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rL4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/rL3"
                android:layout_marginTop="45dp">


                <EditText
                    android:id="@+id/numberCardHolderId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edit_text_shape"
                    android:gravity="center"
                    android:maxLength="10"
                    android:hint="Mobile No."
                    android:inputType="phone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rL8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/rL4"
                android:layout_marginTop="35dp">

                <EditText
                    android:id="@+id/vpaCardHolderId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edit_text_shape"
                    android:gravity="center"
                    android:hint="Enter VPA" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rL7"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/rL8"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textforgetPasswordId"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center|right"
                    android:text="Check Availability"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rL9"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/rL7"
                android:layout_marginTop="35dp">

                <CheckBox
                    android:id="@+id/termsandConditionsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/texttermsandConditionsId"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/termsandConditionsId"
                    android:gravity="center"
                    android:text="@string/i_accept_indepay_terms_and_conditions"
                    android:textSize="15sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rL10"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/rL9"
                android:layout_marginTop="35dp">

                <Button
                    android:id="@+id/activateMyAccountBtnId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/buttonshape_noround"
                    android:text="ACTIVATE MY ACCOUNT"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rL11"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/rL10"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/textAlredyaMemberId"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="Already a member ?  Sign in"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>

