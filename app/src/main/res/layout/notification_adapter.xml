<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/productadapteritem"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3" >




        <RelativeLayout
            android:id="@+id/rl"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">



                <TextView
                    android:id="@+id/editTypeId"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="#00cc00"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:textStyle="bold" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/rl2"
                android:id="@+id/rla">

                <TextView
                    android:id="@+id/txtMobId"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Recieved On"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:id="@+id/editRecievedId"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtMobId" />
                <ImageButton
                    android:id = "@+id/deleteBtnId"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/deleteeeee"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rla">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center|left"
                    android:text="Message"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_toEndOf="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:gravity="center|left"
                    android:textSize="13sp"
                    android:id="@+id/editMessageId" />


            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>