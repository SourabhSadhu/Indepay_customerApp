<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/productadapteritem"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3" >




    <RelativeLayout
        android:id="@+id/rl"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <TextView
                android:id="@+id/editAgentNameId"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:gravity="center|start"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id = "@+id/editAgentMobNo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center|start"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/editAgentNameId"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:id="@+id/rla">

            <TextView
                android:id="@+id/editAgentAddressId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:gravity="center|start"
                android:textSize="13sp"
                android:textStyle="bold" />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/rla">

            <Button
                android:id = "@+id/callBtnId"
                android:layout_width="120dp"
                android:text = "Call"
                android:textSize="13sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:textColor="#ffffff"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"/>
            <Button
                android:id = "@+id/deleteBtnId"
                android:layout_width="120dp"
                android:text = "Delete"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_shape"
                android:layout_height="match_parent" />






        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>