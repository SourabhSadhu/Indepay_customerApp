<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/productadapteritem"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3" >


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <TextView
                android:id="@+id/editTransactionTypeId"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#545454"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:gravity="center|start"
                android:textSize="14sp"
                android:textStyle="bold" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:id="@+id/rla">

            <TextView
                android:id="@+id/editTransactionDateAndTimeId"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#545454"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:gravity="center|start"
                android:textSize="12sp"
                android:textStyle="bold" />



        </RelativeLayout>

        <RelativeLayout
            android:id = "@+id/rL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rla">
            <TextView
                android:id ="@+id/textRsId"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:text = "Rs."
                android:textColor="#FF0000"
                android:gravity="center|start"
                android:textSize="13sp"
                android:textStyle="italic|bold"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/editTransactionAmountId"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_toEndOf="@+id/textRsId"
                android:textColor="#545454"
                android:layout_marginStart="1dp"
                android:gravity="center|start"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>