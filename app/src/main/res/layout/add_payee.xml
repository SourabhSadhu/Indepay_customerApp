<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id = "@+id/scrollViewId"
        android:layout_width="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id = "@+id/rL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rL1"
                android:layout_marginTop="45dp">

                <EditText
                    android:id = "@+id/cardNoId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "Bank"
                    android:inputType="text"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="25dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL3"
                android:layout_below="@+id/rL2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id = "@+id/editPayeeVPAId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="25dp"
                    android:inputType="text"
                    android:hint = "Name of Account Holder"
                    android:layout_below="@+id/textPayeeVPAId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id = "@+id/rL5"
                android:layout_below="@+id/rL3"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id = "@+id/editAmountId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@+id/textAmountId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "Enter Account Number"
                    android:inputType="number"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="25dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL6"
                android:layout_below="@+id/rL5"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@+id/textAmountId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "IFSC Code"
                    android:inputType="text"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id = "@+id/rL7"
                android:layout_below="@+id/rL6"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@+id/textAmountId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "MMID(Optional)"
                    android:inputType="text"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="25dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL8"
                android:layout_below="@+id/rL7"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_height="wrap_content">


                <EditText
                    android:id = "@+id/editRemarksId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@+id/textRemarksId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "Enter remarks,if any"
                    android:inputType="text"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="25dp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id = "@+id/submitAddBeneficiaryBtnId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape_noround"
        android:textColor="#ffffff"
        android:text = "SUBMIT"/>


</RelativeLayout>

