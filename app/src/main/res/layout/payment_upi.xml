<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:focusableInTouchMode="true">




    <ScrollView
        android:id = "@+id/scrollViewId"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id = "@+id/rL1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id = "@+id/textTitleId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text = "Pay by VPA"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rL1"
                android:layout_marginTop="10dp">

                <TextView
                    android:id = "@+id/textPayerVPAId"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center|left"
                    android:text = "Payer VPA"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp" />
                <EditText
                    android:id = "@+id/cardNoId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/textPayerVPAId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "abc@gmail.com"
                    android:inputType="number"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="15dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL3"
                android:layout_below="@+id/rL2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id = "@+id/textPayeeVPAId"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center|left"
                    android:text = "Payee VPA"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp" />
                <EditText
                    android:id = "@+id/editPayeeVPAId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/textPayeeVPAId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "indepay@gmail.com"
                    android:inputType="number"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="15dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL4"
                android:layout_below="@+id/rL3"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id = "@+id/textAmountId"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center|left"
                    android:text = "Amount"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp" />
                <EditText
                    android:id = "@+id/editAmountId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/textAmountId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "Rs.1456"
                    android:inputType="number"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="15dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL5"
                android:layout_below="@+id/rL4"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id = "@+id/textRemarksId"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center|left"
                    android:text = "Remarks"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp" />
                <EditText
                    android:id = "@+id/editRemarksId"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/textRemarksId"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:hint = "Enter remarks,if any"
                    android:inputType="text"
                    android:background="@drawable/edit_text_shape"
                    android:layout_marginStart="15dp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id = "@+id/submitUPIPaymentBtnId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape_noround"
        android:textColor="#ffffff"
        android:text = "SUBMIT"/>


</RelativeLayout>

