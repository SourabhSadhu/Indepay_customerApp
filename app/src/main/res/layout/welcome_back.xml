<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
</android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_below="@+id/appbar"
        android:id = "@+id/scrollViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp">
            <RelativeLayout
                android:id = "@+id/rL2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <Spinner
                    android:id = "@+id/spinnerCountryCodeId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:background="@drawable/spinner_shape"
                    android:layout_marginStart="15dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id = "@+id/rL3"
                android:layout_below="@+id/rL2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">


                <EditText
                    android:id = "@+id/editMobileNoId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint = "Mobile Number"
                    android:layout_marginEnd="15dp"
                    android:maxLength="10"
                    android:inputType="number"
                    android:background="@drawable/edit_text_shape"
                    android:gravity="center"
                    android:layout_marginStart="15dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id = "@+id/rL6"
                android:layout_below="@+id/rL3"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <EditText
                    android:id = "@+id/editPinId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="15dp"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/edit_text_shape"
                    android:hint = "Enter Pin"
                    android:gravity="center"
                    android:layout_marginStart="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id = "@+id/rL7"
                android:layout_below="@+id/rL6"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <TextView
                    android:id = "@+id/textforgetPasswordId"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="Forgot Password ?"
                    android:textSize="17sp"
                    android:gravity="center|right"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>

     <RelativeLayout
         android:id = "@+id/rL8"
         android:layout_below="@+id/rL7"
         android:layout_alignParentBottom="true"
         android:layout_marginTop="140dp"
         android:layout_marginBottom="50dp"
         android:layout_width="match_parent"
         android:layout_height="85dp">
    <Button
        android:id = "@+id/loginBtnId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:background="@drawable/buttonshape_noround"
        android:textColor="#ffffff"
        android:text = "LOGIN" />
     </RelativeLayout>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

