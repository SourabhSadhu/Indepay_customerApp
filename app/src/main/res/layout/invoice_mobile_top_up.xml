<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="200dp"
                android:background="@drawable/invoice1"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:foregroundGravity="center"/>
    <RelativeLayout
        android:id = "@+id/rL1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:id = "@+id/textTransId"
            android:layout_width="130dp"
            android:layout_marginStart="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text = "Transaction ID"
            android:gravity = "center|left"/>
        <TextView
            android:id = "@+id/editTransId"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:text = "43746984093"
            android:layout_toEndOf="@+id/textTransId"
            android:layout_height="match_parent"
            android:gravity = "center|left"/>



    </RelativeLayout>
    <RelativeLayout
        android:id = "@+id/rL2"
        android:layout_below="@+id/rL1"
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <TextView
            android:id = "@+id/textDateandTTineId"
            android:layout_width="130dp"
            android:layout_marginStart="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text = "Date and Time"
            android:gravity = "center|left"/>
        <TextView
            android:id = "@+id/editDateandTTineId"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:text = "28 April 2017,5:10 PM"
            android:layout_toEndOf="@+id/textDateandTTineId"
            android:layout_height="match_parent"
            android:gravity = "center|left"/>

    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/rL3"
        android:layout_below="@+id/rL2"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:id = "@+id/textMobileNo"
            android:layout_width="130dp"
            android:layout_marginStart="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text = "Mobile No."
            android:gravity = "center|left"/>
        <TextView
            android:id = "@+id/editMobileNo"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:text = "7530946909"
            android:layout_toEndOf="@+id/textMobileNo"
            android:layout_height="match_parent"
            android:gravity = "center|left"/>

    </RelativeLayout>
    <RelativeLayout
        android:id = "@+id/rL4"
        android:layout_below="@+id/rL3"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:id = "@+id/textOperatorId"
            android:layout_width="130dp"
            android:layout_marginStart="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text = "Operator"
            android:gravity = "center|left"/>
        <TextView
            android:id = "@+id/editOperatorId"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:text = "Airtel-Delhi NCR"
            android:layout_toEndOf="@+id/textOperatorId"
            android:layout_height="match_parent"
            android:gravity = "center|left"/>

    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/rL5"
        android:layout_below="@+id/rL4"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:id = "@+id/textTansAmountId"
            android:layout_width="130dp"
            android:layout_marginStart="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text = "Transaction Amount"
            android:gravity = "center|left"/>
        <TextView
            android:id = "@+id/editTansAmountId"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:text = "Rs.399"
            android:layout_toEndOf="@+id/textTansAmountId"
            android:layout_height="match_parent"
            android:gravity = "center|left"/>

    </RelativeLayout>
    <RelativeLayout
        android:id = "@+id/rL6"
        android:layout_below="@+id/rL5"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:id = "@+id/textStatusId"
            android:layout_width="130dp"
            android:layout_marginStart="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text = "Status"
            android:gravity = "center|left"/>
        <TextView
            android:id = "@+id/editStatusId"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:text = "Successful"
            android:layout_toEndOf="@+id/textStatusId"
            android:layout_height="match_parent"
            android:gravity = "center|left"/>

    </RelativeLayout>
    <TextView
        android:id = "@+id/textMessageId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:text = "In case of any queries/clarifications"
        android:layout_below="@+id/rL6"
        android:gravity = "center"/>
    <Button
        android:id = "@+id/contactUsMobileTopUpBtnId"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginBottom="35dp"
        android:layout_below="@+id/textMessageId"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:text = "Contact Us"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
    </ScrollView>


</RelativeLayout>