<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:background="#ededed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentTop="true"
                android:id = "@+id/textBankNameId"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="#545454"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id = "@+id/textAccNumberId"
                android:layout_below="@+id/textBankNameId"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:textColor="#545454"
                android:gravity="center|start"
                android:layout_marginStart="10dp"
                android:layout_height="30dp" />
            <ImageView
                android:layout_below="@+id/textBankNameId"
                android:layout_width="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/forward_direction"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_height="30dp" />


            <TextView
                android:id = "@+id/textBranchId"
                android:layout_below="@+id/textAccNumberId"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:textSize= "14sp"
                android:textColor="#545454"
                android:textStyle="bold"
                android:gravity="center|start"
                android:layout_marginStart="10dp"
                android:layout_height="30dp"
                android:text = "Branch"/>

            <TextView
                android:id = "@+id/textBranchAddressId"
                android:layout_below="@+id/textBranchId"
                android:layout_marginStart="10dp"
                android:textSize= "13sp"
                android:textColor="#545454"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>